{
  "extends": [ "bruxisma/renovate" ],
  "nuget": {
    "addLabels": ["renovate:dotnet"],
    "additionalBranchPrefix": "dotnet/",
    "commitMessageTopic": "ðŸ¥… .NET Package {{{depName}}}",
    "packageRules": [
      {
        "addLabels": ["dotnet:msft"],
        "groupName": ["Microsoft"],
        "groupSlug": "microsoft",
        "matchPackagePrefixes": ["Microsoft."]
      },
      {
        "addLabels": ["dotnet:coverage"],
        "groupName": ["Coverage"],
        "groupSlug": "coverage",
        "matchPackagePrefixes": ["coverlet.", "codecov."]
      },
      {
        "addLabels": ["dotnet:tests"],
        "groupName": ["Testing"],
        "groupSlug": "testing",
        "matchPackagePrefixes": ["xunit", "xunit."]
      }
    ],
    "pin": {
      "group": {
        "commitMessageTopic": "ðŸ¥… {{{groupName}}} Packages"
      },
      "groupName": ".NET"
    }
  }
}
